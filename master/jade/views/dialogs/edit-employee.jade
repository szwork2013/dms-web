div
  legend
    h3.mt0 员工详修改 - {{ employee.name }}
  form.form-horizontal
    .form-group
      label.col-sm-2.control-label(for='input-name') 姓名
      .col-sm-4
        input#input-name.form-control(type='text', name="name", ng-model="employee.name", required='')
      label.col-sm-2.control-label(for='input-gender') 性别
      .col-sm-4
        .btn-group(dropdown='dropdown', is-open="genderOpen")
          button.btn.btn-default(dropdown-toggle="", style="width:120px;height:35px;")
            span.pull-left(ng-bind="employee.genderCN")
            b.caret.pull-right(style="margin-top:8px")
          ul.dropdown-menu(role='menu')
            li
              a(href='#', ng-click='selectGender("男")') 男
            li
              a(href='#', ng-click='selectGender("女")') 女
            li
              a(href='#', ng-click='selectGender("其他")') 其他
    .form-group
      label.col-sm-2.control-label(for='input-idNum') 身份证
      .col-sm-10
        input#input-idNum.form-control(type='text', name="idNum", ng-model="employee.idNum", required='')
    .form-group
      label.col-sm-2.control-label(for='input-department') 中心
      .col-sm-4
        .btn-group(dropdown='dropdown', is-open="departmentOpen")
          button.btn.btn-default(dropdown-toggle="", style="width:120px;height:35px;")
            span.pull-left(ng-bind="employee.department")
            b.caret.pull-right(style="margin-top:8px")
          ul.dropdown-menu(role='menu')
            li
              a(href='#', ng-click='selectDepartment("运输")') 运输
            li
              a(href='#', ng-click='selectDepartment("物业")') 物业
            li
              a(href='#', ng-click='selectDepartment("幼儿园")') 幼儿园
      label.col-sm-2.control-label(for='input-dutyDate') 入职
      .col-sm-4
        input#input-dutyDate.form-control(type='text', name="dutyDate", ng-model="employee.dutyDate", required='')
    //- 配偶需要分情况组织界面
    h3 配偶情况&nbsp;&nbsp;
      small(ng-bind="employee.spouseTypeCN", style="font-size:12px;")
    hr(style="margin-top: 0;")
  //- 校外配偶
  form.form-horizontal(ng-if='employee.spouseType=="OUTER"')
    .form-group
      label.col-sm-2.control-label(for='input-outer-name') 姓名
      .col-sm-4
        input#input-outer-name.form-control(type='text', name="outer-name", ng-model="employee.outsideSpouse.name", required='')
      label.col-sm-2.control-label(for='input-outer-gender') 性别
      .col-sm-4
        input#input-outer-gender.form-control(type='text', name="outer-gender", ng-model="employee.outsideSpouse.genderCN", required='')
    .form-group
      label.col-sm-2.control-label(for='input-outer-idNum') 身份证
      .col-sm-10
        input#input-outer-idNum.form-control(type='text', name="outer-idNum", ng-model="employee.outsideSpouse.idNum", required='')
    .form-group
      label.col-sm-2.control-label(for='input-outer-workLocationDetail') 单位
      .col-sm-10
        input#input-outer-workLocationDetail.form-control(type='text', name="outer-workLocationDetail", ng-model="employee.outsideSpouse.workLocationDetail", required='')
  .row
    .container-fluid
      .pull-right
        button.btn.btn-danger(type='button', ng-show='canBeDelete', ng-click='delete()') 删除
        button.btn.btn-default(type='button', ng-click='cancel()') 返回
        button.btn.btn-warning(type='button', ng-click='submitModify()') 修改